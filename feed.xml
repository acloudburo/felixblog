    <content type="html">&lt;div class="row"&gt;
  &lt;div class="article"&gt;
    &lt;p&gt;&lt;span/&gt;&lt;/p&gt;
    
    &lt;p&gt;&lt;div&gt;
       &lt;span style="font-size: 24px; font-weight: bold;"&gt;Reise&lt;/span&gt;
      &lt;/div&gt;
      &lt;div&gt;
       &lt;div&gt;
        &lt;br&gt;
       &lt;/div&gt;
       &lt;table style="border-collapse: collapse; min-width: 100%;"&gt;
        &lt;tbody&gt;
         &lt;tr&gt;
          &lt;td style="border: 1px solid rgb(219, 219, 219); padding: 8px;"&gt;
           &lt;div&gt;
            &lt;span style="font-size: 14px; font-weight: normal;"&gt;&amp;gt; Genua&lt;/span&gt;
           &lt;/div&gt;&lt;/td&gt;
          &lt;td style="border: 1px solid rgb(219, 219, 219); padding: 8px;"&gt;
           &lt;div&gt;
            &lt;span style="font-size: 14px; font-weight: normal;"&gt;22.06.2018&lt;/span&gt;
           &lt;/div&gt;&lt;/td&gt;
          &lt;td style="border: 1px solid rgb(219, 219, 219); padding: 8px;"&gt;
           &lt;div&gt;
